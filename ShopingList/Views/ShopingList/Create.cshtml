@model ShopingList.Data.Models.GroceriesList

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h4>Create New Shoping List</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            @*<input id="today" type="checkbox" name="today" onclick='fillTheTiitle(this);' /><label for="today">Add today date in the title</label>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn my-3 btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to shoping lists</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            let date = new Date();
            let month = date.getMonth() + 1;
            let formatedDate = '(' + date.getDate() + '.' + month + '.' + date.getFullYear() + ')';
            $('#Title').val(formatedDate);
        });
    </script>
}
