@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Products" asp-action="Index">Products manager</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark">Hello @UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <a id="logout" type="submit" class="nav-link btn btn-link text-dark" asp-controller="Identity" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-controller="Identity" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="Identity" asp-action="Login">Login</a>
        </li>
    }
</ul>
